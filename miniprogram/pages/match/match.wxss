/* pages/match/match.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.loading {
  text-align: center;
  padding: 40rpx;
  color: #666;
}

.debug-section {
  margin: 20rpx 0;
  text-align: center;
}

.debug-btn {
  background-color: #ff7f50;
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.match-list {
  width: 100%;
}

.match-item {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.match-header {
  margin-bottom: 20rpx;
}

.match-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.match-time {
  font-size: 24rpx;
  color: #666;
}

.teams {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx 0;
}

.team {
  flex: 1;
  text-align: center;
}

.team-name {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.vs {
  margin: 0 20rpx;
  color: #999;
  font-size: 24rpx;
}

.match-status {
  text-align: center;
  padding: 10rpx 0;
  border-radius: 6rpx;
  margin-top: 20rpx;
}

.match-status text {
  font-size: 24rpx;
  color: #fff;
  font-weight: bold;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
}

.not-started {
  background-color: #8a8a8a;
}

.in-progress {
  background-color: #07c160;
}

.finished {
  background-color: #444444;
}

/* 比分样式 */
.match-score {
  text-align: center;
  margin-top: 15rpx;
}

.score-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff7f50;
}

.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
}
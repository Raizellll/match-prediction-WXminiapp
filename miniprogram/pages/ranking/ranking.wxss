/* pages/ranking/ranking.wxss */
.ranking-container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f4e8;
}

/* 标题样式 */
.ranking-header {
  padding: 30rpx 0;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.05);
}

.title-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

.ranking-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 0 20rpx;
}

.title-decoration {
  font-size: 40rpx;
}

/* 滚动容器 */
.ranking-scroll {
  flex: 1;
  height: calc(100vh - 100rpx);
}

/* 加载状态 */
.loading-container, .error-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #999;
  font-size: 28rpx;
}

.loading {
  margin-bottom: 20rpx;
}

.error-message {
  margin-bottom: 30rpx;
}

.retry-btn {
  background-color: #ffb74d;
  color: white;
  font-size: 28rpx;
  padding: 12rpx 40rpx;
  border-radius: 30rpx;
  border: none;
}

/* TOP 3 排名区域 */
.top-rankers {
  position: relative;
  height: 480rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  padding-bottom: 40rpx;
}

.rank-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(to bottom, #ffe082, #ffecb3);
  z-index: 0;
}

.rank-item-top {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
}

.rank-1 {
  margin-bottom: 40rpx;
}

.rank-2, .rank-3 {
  margin-bottom: 20rpx;
}

.rank-crown {
  font-size: 50rpx;
  margin-bottom: 10rpx;
}

.rank-number {
  width: 50rpx;
  height: 50rpx;
  border-radius: 25rpx;
  background-color: #fff;
  color: #f5a623;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #ffc107;
  margin-bottom: 15rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 4rpx solid #fff;
  overflow: hidden;
}

.avatar-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-placeholder {
  font-size: 60rpx;
  color: #fff;
  text-transform: uppercase;
}

.rank-1 .user-avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  margin-bottom: 15rpx;
}

.rank-1 .avatar-placeholder {
  font-size: 70rpx;
}

.user-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
  max-width: 150rpx;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.accuracy-value {
  font-size: 32rpx;
  color: #f57c00;
  font-weight: bold;
}

/* 其他排名标题 */
.other-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  padding: 20rpx 30rpx;
  background-color: #fff;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 其他排名列表 */
.other-rankers {
  background-color: #fff;
  padding-bottom: 30rpx;
}

.rank-item-list {
  display: flex;
  align-items: center;
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.rank-number-list {
  width: 60rpx;
  font-size: 32rpx;
  color: #999;
  font-weight: 500;
  text-align: center;
}

.user-avatar-list {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background-color: #e0e0e0;
  margin-right: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.avatar-image-list {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.avatar-placeholder-list {
  font-size: 40rpx;
  color: #fff;
  text-transform: uppercase;
}

.user-info-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.user-name-list {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.user-stats-list {
  font-size: 24rpx;
  color: #999;
}

.accuracy-value-list {
  font-size: 32rpx;
  color: #f57c00;
  font-weight: bold;
}

/* 空数据提示 */
.empty-message {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 30rpx;
  background-color: #fff;
}

.empty-icon {
  font-size: 80rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.empty-desc {
  font-size: 28rpx;
  color: #999;
  text-align: center;
}

.user-count {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}
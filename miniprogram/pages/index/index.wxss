.date-selector {
  width: 100%;
  white-space: nowrap;
  padding: 20rpx 0;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.date-item {
  display: inline-block;
  padding: 10rpx 30rpx;
  margin: 0 10rpx;
  text-align: center;
  border-radius: 8rpx;
  background: #f5f5f5;
}

.date-item.selected {
  background: #1890ff;
  color: #fff;
}

.date-item .weekday {
  font-size: 24rpx;
  display: block;
  margin-bottom: 4rpx;
}

.date-item .date {
  font-size: 28rpx;
  font-weight: bold;
}

